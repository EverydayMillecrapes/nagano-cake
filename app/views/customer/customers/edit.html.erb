<%= render 'layouts/customer_header' %>
<div class="container my-5">
  <div class="row">
    <div class='px-3 mx-auto'>
      <h2>会員情報編集</h2>

    <%= form_for(@customer, url: {controller: 'customers', action: 'update' }) do |f| %>
      <div class="form-group">
        <%= f.label :氏名 %>
        <div class="row">
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :フリガナ %>
        <div class="row">
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :郵便番号 %>
        <%= f.text_field :postcode %>
      </div>

      <div class="form-group">
        <%= f.label :住所 %>
        <%= f.text_field :address %>
      </div>

      <div class="form-group">
        <%= f.label :電話番号 %>
        <%= f.text_field :phone_number %>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email %>
      </div>

      <div class="row">
        <%= f.submit "編集内容を保存する" %>
      </div>
    <% end %>

    <div>
     <%= link_to "退会する", customer_customers_quit_path %>
    </div>
      </div>
    </div>
  </div>