<%= render 'layouts/customer_header' %>
<div class="container">
  <div class="row">
    <div class="col-xs-9 col-xs-offset-1 top-main">
      <div class="row product-card-content">
        <h3>新着商品</h4>
        <% @products.each do |product| %>
        <%= link_to customer_product_path(product.id) do %>
        <div class="thumbnail product-thumbnail col-xs-2">
         <p><%= attachment_image_tag product, :image, :size => '300x300' %></p>
          <div class="caption">
            <p><%= product.name %></p>
            <p><%= "#{product.non_tax_price}円" %></p>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>