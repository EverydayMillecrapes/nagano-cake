<%= render 'layouts/customer_header' %>
<div class="container my-5">
  <div class="row">
    <div class='px-3 mx-auto'>
        <h2>配送先編集</h2>

        <%= form_for(@delivery, url: {controller: 'deliveries', action: 'update' }) do |f| %>

                <div class="form-group col-xs-12">
                    <%= f.label :"郵便番号(ハイフンなし)"  %><br />
                    <%= f.text_field :postcode %><br />
                </div>

                <div class="form-group col-xs-12">
                    <%= f.label :"住所" %><br />
                    <%= f.text_field :address %><br />
                </div>

                <div class="form-group col-xs-12">
                    <%= f.label :"宛名"  %><br />
                    <%= f.text_field :name %><br />
                </div>
                <%= f.submit '変更内容を保存', class:"btn btn-primary" %>
            </div>
        <% end %>
    </div>
  </div>
</div>