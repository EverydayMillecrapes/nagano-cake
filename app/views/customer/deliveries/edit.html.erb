<div class="container">
  <div class="row">
    <div class='px-3 mx-auto'>
        <h2>配送先編集</h2>

        <%= form_for(@delivery, url: {controller: 'deliveries', action: 'update' }) do |f| %>

                <div>
                    <%= f.label :"郵便番号(ハイフンなし)"  %>
                    <%= f.text_field :postcode %>
                </div>

                <div class="form-group col-xs-12">
                    <%= f.label :"住所" %>
                    <%= f.text_field :address %>
                </div>

                <div class="form-group col-xs-12">
                    <%= f.label :"宛名"  %>
                    <%= f.text_field :name %>
                </div>
                <%= f.submit '変更内容を保存' %>
            </div>
        <% end %>
    </div>
  </div>
</div>