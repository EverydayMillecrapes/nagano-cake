<div class="container">
  <div class="row">
    <div class='px-3 mx-auto'>
        <h2>配送先登録/一覧</h2>

        <%= form_for(@delivery, url: {controller: 'deliveries', action: 'create' }) do |f| %>

                <div>
                    <%= f.label :"郵便番号(ハイフンなし)"  %>
                    <%= f.text_field :postcode %>
                </div>

                <div class="form-group col-xs-12">
                    <%= f.label :"住所" %>
                    <%= f.text_field :address %>
                </div>

                <div class="form-group col-xs-12">
                    <%= f.label :"宛名"  %>
                    <%= f.text_field :name %>
                </div>
                <%= f.submit '新規登録' %>
            </div>
        <% end %>

        <table class="table table-hover table-bordered">
            <thead>
                <tr class="info">
                    <th>郵便番号</th>
                    <th>住所</th>
                    <th>宛名</th>
                    <th colspan="2"></th>
                </tr>
            </thead>

        <% @deliveries.each do |delivery| %>
            <tbody>

                 <td>
                   <%= delivery.postcode %>
                 </td>
                 <td>
                   <%= delivery.address %>
                 </td>
                 <td>
                   <%= delivery.name %>
                 </td>
                 <td>
                      <%= link_to "編集する",edit_customer_delivery_path(delivery.id) %>
                 </td>
                 <td>
                      <%= link_to "削除する",customer_delivery_path(delivery.id), method: :delete %>
                 </td>
            </tbody>
        <% end %>
        </table>
   </div>
  </div>
</div>