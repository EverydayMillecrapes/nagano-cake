<%= render 'layouts/admin_header' %>
<div class="container my-5">
 <div class="row">
 </div>

 <div class="row my-3">
  <div class="offset-sm-3">
        <h2><%= @customer.full_name %>さんの会員情報編集</h2>

        <%= form_for(@customer, url: {controller: 'customers', action: 'update' }) do |f| %>
        <div class="form-group">
        <%= f.label :氏名 %>
        <div class="row">
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :フリガナ %>
        <div class="row">
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :郵便番号 %>
        <%= f.text_field :postcode %>
      </div>

      <div class="form-group">
        <%= f.label :住所 %>
        <%= f.text_field :address %>
      </div>

      <div class="form-group">
        <%= f.label :電話番号 %>
        <%= f.text_field :phone_number %>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス %>
        <%= f.text_field :email%>
      </div>

      <div class="form-group">
        <%= f.label :会員ステータス %>
        <lavel><%= f.radio_button :is_deleted,"false" %>有効</lavel>
        <lavel><%= f.radio_button :is_deleted,"true" %>退会</lavel>
      </div>
      <%= f.submit '変更内容を保存' %>
            </div>
        <% end %>
    </div>
  </div>
</div>