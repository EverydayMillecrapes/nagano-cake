<%= render 'layouts/admin_header' %>
<div class="container my-5">
 <div class="row">
 </div>

 <div class="row my-3">
  <div class="offset-sm-3">
        <h2>商品一覧</h2>
        <div>
            <%=link_to "新規作成", new_admin_product_path %>
        </div>
        <table>
        <thead>
            <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
            <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
             <td><%= product.id %></td>  
             <td><%= link_to product.name, admin_product_path(product.id)  %></td>
             <td><%= product.non_tax_price %>円</td>
             <td><%= product.genre.name %></td>
             <td><%= product.is_active ? "販売中":"販売停止中" %></td>
           </tr>
         <% end %>
        </tbody>
        </table>
   </div>
  </div>
</div>