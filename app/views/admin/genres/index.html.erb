<%= render 'layouts/admin_header' %>
<div class="container my-5">
  <div class="row">
    <div class='px-3 mx-auto'>
        <h2>ジャンル一覧・追加</h2>

        <%= form_for(@genre, url: {controller: 'genres', action: 'create' }) do |f| %>
                <div>
                    <%= f.label :"ジャンル名"  %>
                    <%= f.text_field :name %>
                <%= f.submit '新規登録', class: "btn btn-info"%>
                </div>
            </div>
        <% end %>

        <table class="table table-hover table-bordered">
            <thead>
                <tr class="info">
                    <th>ジャンル</th>
                    <th></th>
                </tr>
            </thead>

        <% @genres.each do |genre| %>
            <tbody>
                 <td>
                   <%= genre.name %>
                 </td>
                 <td>
                      <%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-info' %>
                 </td>
            </tbody>
        <% end %>
        </table>
   </div>
  </div>
</div>